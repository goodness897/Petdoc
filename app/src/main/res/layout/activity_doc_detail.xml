<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"

    android:orientation="vertical"
    tools:context="com.petdoc.DocDetailActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/no_image_available" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/myprimaryColor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dataTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:text="New Text"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/callButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/myprimaryColor"
                android:contextClickable="false"
                android:drawableLeft="@drawable/call"
                android:drawablePadding="-24dp"
                android:onClick="callButtonClicked"
                android:paddingLeft="24dp"
                android:text="CALL"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <Button
                android:id="@+id/reviewButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/myprimaryColor"
                android:contextClickable="false"
                android:drawableLeft="@drawable/review"
                android:drawablePadding="-24dp"
                android:onClick="reviewButtonClicked"
                android:paddingLeft="24dp"
                android:text="REVIEW"
                android:textColor="#ffffff"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/dataAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="5"
                android:text="New Text"
                android:textColor="@color/fontColor"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:src="@drawable/time" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="3"
                android:text="New Text"
                android:textColor="@color/fontColor"
                android:textSize="16dp" />

            <Button
                android:id="@+id/seeReviewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰 보기"
                android:textColor="@color/pressed_color"
                android:background="@null"
                android:onClick="seeReviewButtonClicked"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/review_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
